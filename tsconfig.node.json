{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "target": "ES2020",
    "strict": true
  }
}
